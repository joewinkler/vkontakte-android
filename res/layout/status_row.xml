<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:paddingRight="6dip"
                android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/photo"
            android:layout_toRightOf="@id/indicator"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dip"
            android:layout_marginLeft="6dip"
            android:src="@drawable/icon"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    <TextView android:id="@+id/name"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/photo"
              android:layout_alignParentRight="true"
              android:text="My Application" android:textStyle="bold"
              android:layout_width="wrap_content"
              android:layout_alignParentTop="true"/>
    <TextView android:id="@+id/time"
              android:textStyle="italic" android:layout_alignParentRight="true"
              android:layout_width="wrap_content"
              android:text="11:00" android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
              />
    <TextView android:id="@+id/status"
              android:layout_width="fill_parent"
              android:layout_toRightOf="@id/photo"
              android:autoLink="all"
              android:layout_alignParentRight="true"
              android:text="s" android:layout_height="wrap_content" android:layout_below="@+id/name"/>


</RelativeLayout>