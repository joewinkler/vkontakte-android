<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="wrap_content" android:layout_width="250px"
        android:orientation="vertical" android:gravity="center">
    <EditText android:id="@+id/login" android:layout_height="wrap_content" android:layout_width="fill_parent"
              android:hint="login"/>
    <EditText android:id="@+id/pass" android:layout_height="wrap_content" android:layout_width="fill_parent"
              android:hint="pass" android:password="true"/>
    
<LinearLayout android:id="@+id/LinearLayout01" android:layout_height="wrap_content" android:layout_width="fill_parent"><Button android:id="@+id/button_login" android:layout_height="wrap_content" android:layout_width="fill_parent"
            android:text="Login" android:layout_weight="50"/><Button android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="50" android:text="Cancel" android:id="@+id/cancel"></Button>
</LinearLayout>
<ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminate="true" android:visibility="gone" android:id="@+id/progress_bar"></ProgressBar>
</LinearLayout>