<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/LinearLayout01" android:layout_width="fill_parent" android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
              android:background="#FF11637B">

    <TableRow android:id="@+id/StatusTableRow" android:layout_width="fill_parent" android:layout_height="wrap_content"
              android:paddingTop="4dip" android:paddingLeft="2dip">
        <EditText android:id="@+id/StatusEditText" android:layout_height="wrap_content"
                  android:layout_width="wrap_content" android:layout_weight="1"
                  android:hint="@string/what_are_you_doing" android:inputType="none">
        </EditText>
        <Button android:id="@+id/StatusSubmitButton" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="clip_vertical"
                android:text="@string/share"></Button>
    </TableRow>


    <GridView android:id="@+id/HomeGrid"
              android:numColumns="2"
              android:paddingTop="5dip"
              android:background="#FFECEEF4"
              android:fadingEdge="none"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="5dip"
              android:horizontalSpacing="8dp"
              android:verticalSpacing="8dp">

    </GridView>


    <Gallery android:layout_height="wrap_content" android:id="@+id/OnlineFriendsGallery"
             android:layout_width="fill_parent" android:minHeight="20dip"></Gallery>
</LinearLayout>
