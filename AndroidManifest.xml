<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.googlecode.vkontakte_android"
          android:versionCode="1"
          android:versionName="0.1 alpha">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>

    <application android:label="@string/app_name" android:icon="@drawable/vkontakte_logo_48" android:theme="@style/vk">
        <activity android:name=".CGuiTest"
                  android:label=" VKontakte (old UI)">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

            </intent-filter>
        </activity>
        <activity android:name=".CMeTab"
                  android:label="@string/app_name">
        </activity>
        <activity android:name="FriendListActivity"
                  android:label="@string/app_name">
        </activity>
        <activity android:name="MessagesListTabActivity"
                  android:label="@string/app_name">
        </activity>
        <activity android:name=".ComposeMessageActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.SENDTO"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:scheme="imto" android:host="vkontakte"/>
            </intent-filter>
        </activity>
        <activity android:name="FriendsListTabActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="ProfileViewActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="UpdatesListTabActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".CSettings"
                  android:label="@string/app_name">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <provider android:name=".provider.UserapiProvider" android:authorities="org.googlecode.vkontakte_android"/>
        <service android:enabled="true" android:name=".service.CheckingService"/>
        <activity android:name=".HomeGridActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>


    <uses-sdk android:minSdkVersion="3"/>
</manifest> 