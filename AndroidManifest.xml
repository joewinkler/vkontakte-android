<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.googlecode.vkontakte_android"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>

    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true">
        <activity android:name=".CGuiTest"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".CMeTab"
                  android:label="@string/app_name">
        </activity>
        <activity android:name=".CMessagesTab"
                  android:label="@string/app_name">
        </activity>
        <activity android:name=".ComposeMessageActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.SENDTO"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:scheme="imto" android:host="vkontakte"/>
            </intent-filter>
        </activity>
        <activity android:name="FriendsListTabActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".CSettings"
                  android:label="@string/app_name">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <provider android:name=".provider.UserapiProvider" android:authorities="org.googlecode.vkontakte_android"/>
        <service android:enabled="true" android:name=".service.CheckingService"/>
    </application>


    <uses-sdk android:minSdkVersion="3"/>
</manifest> 